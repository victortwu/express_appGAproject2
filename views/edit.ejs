<%- include('./partials/header.ejs') %>
<main>
<h1>edit</h1>
<div class="container">
<div class="formDiv">
  <form action='/menu/<%=item.id%>?_method=PUT' method='POST'>
  <div class="form-group">
    <label for="formGroupExampleInput">Item Name:</label>
    <input type="text"  name="name" class="form-control" id="formGroupExampleInput" value="<%=item.name%>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Description</label>
    <input type="text" name="description" class="form-control" id="formGroupExampleInput2" value="<%=item.description%>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Image</label>
    <input type="text" name="img" class="form-control" id="formGroupExampleInput2" value="<%=item.img%>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Price</label>
    <input type="number" name="price" class="form-control" id="formGroupExampleInput2" value="<%=item.price%>">
  </div>
  <div class="form-group" id='bottomInput'>
    <label for="formGroupExampleInput2">Availability</label>
    <input type="text" name="availability" class="form-control" id="formGroupExampleInput2" value="<%=item.availability%>">
  </div>

  <button class="btn btn-outline-light" type="submit">Update</button>
</form>
</div>
</div>




  <%- include('./partials/footer.ejs') %>
</main>
